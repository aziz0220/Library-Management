<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="445.0" prefWidth="154.0" styleClass="toolbar-container" stylesheets="@biblio_styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.ensit.miniprojetbibliotheque.SidebarController">
    <children>
        <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#loadAddMember" prefHeight="400.0" prefWidth="160.0" styleClass="toolbar-button" text="Ajout Lecteur" textAlignment="CENTER">
         <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0">
               <image>
                  <Image url="@icons/ajout_lecteur.png" />
               </image>
            </ImageView>
         </graphic></Button>
        <Button contentDisplay="TOP" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#loadAddBook" prefHeight="400.0" prefWidth="160.0" styleClass="toolbar-button" text="Ajout Livre" textAlignment="CENTER">
         <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0">
               <image>
                  <Image url="@icons/ajout_livre.png" />
               </image>
            </ImageView>
         </graphic></Button>
        <Button contentDisplay="TOP" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#loadMemberTable" prefHeight="400.0" prefWidth="160.0" styleClass="toolbar-button" text="Liste des Lecteurs" textAlignment="CENTER">
         <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0">
               <image>
                  <Image url="@icons/liste_lecteurs.png" />
               </image>
            </ImageView>
         </graphic></Button>
        <Button contentDisplay="TOP" layoutX="10.0" layoutY="81.0" mnemonicParsing="false" onAction="#loadBookTable" prefHeight="400.0" prefWidth="160.0" styleClass="toolbar-button" text="Liste des Livres" textAlignment="CENTER">
         <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0">
               <image>
                  <Image url="@icons/liste_livres.png" />
               </image>
            </ImageView>
         </graphic></Button>
        <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#loadIssuedBookList" prefHeight="400.0" prefWidth="160.0" styleClass="toolbar-button" text="Les empruntes" textAlignment="CENTER">
         <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0">
               <image>
                  <Image url="@icons/borrow.png" />
               </image>
               <effect>
                  <ColorAdjust brightness="-0.78" contrast="-0.5" hue="1.0" saturation="-1.0" />
               </effect>
            </ImageView>
         </graphic></Button>
      <Button fx:id="quitButton" contentDisplay="TOP" layoutX="10.0" layoutY="366.0" mnemonicParsing="false" onAction="#loadAccueilView" prefHeight="400.0" prefWidth="160.0" styleClass="toolbar-button" text="Quitter" textAlignment="CENTER">
         <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0">
               <image>
                  <Image url="@icons/icons8-quit-100.png" />
               </image>
            </ImageView>
         </graphic></Button>
    </children>
</VBox>
