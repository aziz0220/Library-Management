<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="384.0" prefWidth="446.0" stylesheets="@dark-theme.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.ensit.miniprojetbibliotheque.EmpruntLivreController">

    <!-- Top: Menu Bar -->
    <top>
        <MenuBar prefHeight="33.0" prefWidth="1073.0">
            <!-- Add your menu items here -->
            <Menu text="File">
                <MenuItem onAction="#handleExit" text="Exit" />
            </Menu>
        </MenuBar>
    </top>

    <!-- Bottom: Status Bar -->
    <bottom>
        <!-- Add any status information here -->
    </bottom>
   <left>
      <AnchorPane prefHeight="361.0" prefWidth="734.0" BorderPane.alignment="CENTER">
         <children>
            <TabPane prefHeight="495.0" prefWidth="1086.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Emprunter Livre">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="466.0" prefWidth="542.0">
                           <children>
                                <VBox alignment="CENTER" layoutX="62.0" layoutY="35.0" prefHeight="185.0" prefWidth="662.0" spacing="20">
                                    <padding>
                                        <Insets bottom="20" left="20" right="20" top="20" />
                                    </padding>
                        
                                    <!-- Borrow Book Section -->
                                    <HBox prefHeight="109.0" prefWidth="1045.0" spacing="10">
                                        <ComboBox fx:id="booksComboBox" promptText="Select a Book" />
                                        <ComboBox fx:id="readersComboBox" promptText="Select a Reader" />
                                        <Button onAction="#borrowBook" text="Borrow" />
                                    </HBox>
                                </VBox>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Retourner Livre">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="380.0" prefWidth="851.0">
                           <children>
                              <VBox prefHeight="524.0" prefWidth="868.0">
                                 <children>
                              
                                                                                       <!-- Return Book Section -->
                                       <HBox prefHeight="223.0" prefWidth="868.0" spacing="10">
                                       <Button fx:id="lecteursliste" mnemonicParsing="false" onAction="#handleMenuViewLecteur" prefHeight="38.0" prefWidth="158.0" text="LECTEURS">
                                          <HBox.margin>
                                             <Insets left="5.0" />
                                          </HBox.margin>
                                       </Button>
                                       <Button fx:id="livrelistes" mnemonicParsing="false" onAction="#handleMenuViewBook" prefHeight="38.0" prefWidth="163.0" text="LIVRES" />
                                           <ComboBox fx:id="borrowedBooksComboBox" prefHeight="27.0" prefWidth="232.0" promptText="Select a Borrowed Book">
                                          <HBox.margin>
                                             <Insets top="300.0" />
                                          </HBox.margin></ComboBox>
                                       <Button fx:id="empruntlist" mnemonicParsing="false" onAction="#handleIssuedList" prefHeight="38.0" prefWidth="171.0" text="EMPRUNTES" />
                                           <Button alignment="CENTER" layoutX="100.0" onAction="#returnBook" prefHeight="38.0" prefWidth="157.0" text="Return" textAlignment="CENTER">
                                          <HBox.margin>
                                             <Insets top="300.0" />
                                          </HBox.margin></Button>
                                       </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
              </tabs>
            </TabPane>
         </children>
      </AnchorPane>
   </left>

</BorderPane>
